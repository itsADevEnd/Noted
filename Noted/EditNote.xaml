<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noted.EditNote">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Edit Your Note"
                HorizontalOptions="CenterAndExpand" Margin="20" FontSize="Medium"/>
            <Editor x:Name="NoteEditor" HorizontalOptions="FillAndExpand" AutoSize="TextChanges" Margin="10" TextColor="White"/>
            <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
                <Button x:Name="EditNoteButton" Text="Edit Note" Padding="10" Clicked="EditNote_Clicked"/>
                <Button Text="Save Note" Padding="10" Clicked="SaveNote_Clicked"/>
                <Button Text="Delete Note" Padding="10" Clicked="DeleteNote_Clicked"/>
                <Button Text="Return to Notes" Clicked="ReturnToNotes_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>