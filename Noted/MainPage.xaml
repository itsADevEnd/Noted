<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noted.MainPage"
             BackgroundColor="white">

    <StackLayout x:Name="NotesStackLayout" VerticalOptions="Fill">
        <TableView>
            <TableRoot>
                <TableSection x:Name="TextCellContainer" x:FieldModifier="public">
                </TableSection>
            </TableRoot>
        </TableView>
        <AbsoluteLayout VerticalOptions="End">
            <ImageButton Source="plus_icon.png" Clicked="AddNote_Clicked" Margin="10" AbsoluteLayout.LayoutFlags="PositionProportional"  
            AbsoluteLayout.LayoutBounds=".50,0,80,80" BackgroundColor="Transparent"/>
        </AbsoluteLayout>
    </StackLayout>
</ContentPage>
